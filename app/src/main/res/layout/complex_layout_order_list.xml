<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_Order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="46"
                app:layout_constraintLeft_toRightOf="@+id/tv_ol_3"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_3" />

            <TextView
                android:id="@+id/tv_ol_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order#"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tv_ol_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                app:layout_constraintBottom_toBottomOf="@+id/tv_Order_num"
                android:layout_marginRight="24dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/tv_ol_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ol_3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_ol_3" />

            <TextView
                android:id="@+id/tv_ol_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ol_5"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_ol_5" />

            <TextView
                android:id="@+id/tv_ol_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONVERTER PROGRESSIVE"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_6"
                app:layout_constraintLeft_toRightOf="@+id/tv_ol_6"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tv_ol_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fx Progressive Digital 78V"
                app:layout_constraintLeft_toRightOf="@+id/tv_ol_5"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_5"
                android:layout_marginStart="16dp" />



            <TextView
                android:id="@+id/tv_ol_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ol_7"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_right" />

            <TextView
                android:id="@+id/tv_ol_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ol_8"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_left" />

            <TextView
                android:id="@+id/tv_ol_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Payable Amount"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ol_6"
                app:layout_constraintTop_toBottomOf="@+id/tv_ol_6" />

            <TextView
                android:id="@+id/tv_ol_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500.98"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_10"
                app:layout_constraintRight_toRightOf="@+id/tv_ol_7" />

            <View
                android:id="@+id/v_ol_view"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ol_10"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_ol_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:paddingBottom="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/v_ol_view"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ol_10" />

            <TextView
                android:id="@+id/tv_ol_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Pending"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_11"
                app:layout_constraintLeft_toRightOf="@+id/tv_ol_11"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/tv_ol_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/4/2017"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ol_status"
                app:layout_constraintRight_toRightOf="@+id/tv_ol_amount" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>